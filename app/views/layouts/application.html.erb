<!DOCTYPE html>
<html>
<head>
  <title>Restaurant</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="login">
    <% if session[:current_user_id] %>
    <h1>Welcome Back</h1>
    <%= link_to "#{User.find(session[:current_user_id]).username}", user_path(session[:current_user_id]) %> ||
    <%= link_to "Logout", sessions_path, method: :delete %> ||
    <%= link_to "Menu", items_path %> ||
    <%= link_to "Tickets", tickets_path %>
    <% else %>
    <h1>Sign in Here</h1>
    <% #TODO what's a form_tag for %>
    <%= form_tag(sessions_path) do%>
    <%= label_tag :username %> <br>
    <%= text_field_tag :username %>
    <br>
    <%= label_tag :password %> <br>
    <%= password_field_tag :password %>
    <br><br>
    <%= submit_tag "Login"%>
    <% end %>
    <% end %>
  </div>
<%= yield %>

</body>
</html>
